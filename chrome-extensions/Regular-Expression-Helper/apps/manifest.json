{
  "name": "Regular Expression Helper",
  "manifest_version": 2,
  "version": "2020.12.24",
  "description": "基于regulex的正则表达式工具，主要包括正则的解析可视化，常用正则表达式，组合生成正则表达式，测试正则表达式。",
  "browser_action": {
    "default_icon": "./static/img/icon-128.png",
    "default_title": "Regular Expression Helper",
    "default_popup": "./popup/index.html"
  },
  "icons": {
    "16": "./static/img/icon-16.png",
    "48": "./static/img/icon-48.png",
    "128": "./static/img/icon-128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "cookies",
    "notifications",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["./static/js/pupopScript.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "content_security_policy": "style-src 'self' 'unsafe-inline';script-src 'self' 'unsafe-eval'; object-src 'self' ; media-src 'self' filesystem:",
  "background": {
    "scripts": ["./static/js/backgroundScript.js"],
    "persistent": true
  }
}
